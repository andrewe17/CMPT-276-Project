<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="./assets/stylesheets/login.css">
    <link rel="stylesheet" href="./assets/stylesheets/main.css">
    <script type = "text/javascript"src="./assets/js/login.js"></script>
    <script src="./assets/js/jquery.min.js"></script>
  </head>
  <body>
    <% if(results == 0) { %>
          <div>
          <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
          <strong>Success!</strong> you have successfully created a new login.
          </div>
    <% } %>

    <% if(results != 0) { %>
          <div>
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <strong>Error</strong> you have either the wrong username or password.
          </div>
    <% } %>


    <form id="signin" class="" method="post" action="/signin">
      <h1>Sign In</h1>
      <input type="text" id="user" name="user" placeholder="User Name" required />
      <input type="password" id="password" name="password" placeholder="Password" required />
      <button   type="submit" id="LOGIN">LOGIN</button>

    </form>

    <form method="post" action="/signup1" method="post">
      <button type="submit" name="sign_up">Sign up</button>
    </form>
  </body>
</html>
